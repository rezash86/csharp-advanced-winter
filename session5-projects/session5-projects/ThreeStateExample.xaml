<Window x:Class="session5_projects.ThreeStateExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:session5_projects"
        mc:Ignorable="d"
        Title="ThreeStateExample" Height="170" Width="300">
    <StackPanel Margin="10">
        <Label FontWeight="Bold" FontSize="10">Application Options</Label>
        <StackPanel Margin="10, 5">
            <CheckBox IsThreeState="True" Name="cbAllFeatures" Checked="cbAllFeatures_Checked" Unchecked="cbAllFeatures_Checked">Enable All</CheckBox>
            <StackPanel Margin="20,5">
                <CheckBox Name="cbFeatureAbc" Checked="cbFeature_Checked" Unchecked="cbFeature_Checked">Enable Feature ABC</CheckBox>
                <CheckBox Name="cbFeatureXyz" Checked="cbFeature_Checked" Unchecked="cbFeature_Checked">Enable Feature xyz</CheckBox>
                <CheckBox Name="cbFeatureWww" Checked="cbFeature_Checked" Unchecked="cbFeature_Checked">Enable Feature www</CheckBox>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>

        <Calendar x:Name="cldSample">
            <Calendar.BlackoutDates>
                <CalendarDateRange Start="04.12.2020" End="04.19.2020"></CalendarDateRange>
            </Calendar.BlackoutDates>
        </Calendar>
    </Viewbox>-->
</Window>

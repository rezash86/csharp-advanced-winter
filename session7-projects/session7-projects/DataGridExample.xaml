<Window x:Class="session7_projects.DataGridExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:session7_projects"
        mc:Ignorable="d"
        Title="DataGridExample" Height="300" Width="400">
    <Grid Margin="10">
        <DataGrid x:Name="dGAuthors" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="First Name" Binding="{Binding FName}"></DataGridTextColumn>
                <DataGridTextColumn Header="Last Name" Binding="{Binding LName}"></DataGridTextColumn>
                <DataGridTextColumn Header="Birth Date" Binding="{Binding Birthday}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>

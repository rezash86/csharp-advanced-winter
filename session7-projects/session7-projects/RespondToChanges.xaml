<Window x:Class="session7_projects.RespondToChanges"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:session7_projects"
        mc:Ignorable="d"
        Title="RespondToChanges" Height="150" Width="300">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Right">
            <Button x:Name="btnAddUser" Click="btnAddUser_Click">Add User</Button>
            <Button x:Name="btnchangeUser" Click="btnchangeUser_Click">Change User</Button>
            <Button x:Name="btnDeleteUser" Click="btnDeleteUser_Click">Delete User</Button>
        </StackPanel>
        <ListBox Name="lbUser" DisplayMemberPath="Name"/>
    </DockPanel>
</Window>

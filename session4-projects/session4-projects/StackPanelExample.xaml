    <StackPanel Background="DeepSkyBlue">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Januray" Background="LightBlue" Margin="2.5" Width="90" Height="40"></Button>
            <Button Content="February" Background="LightBlue" Margin="2.5" Width="90" Height="40"></Button>
            <Button Content="March" Background="LightBlue" Margin="2.5" Width="90" Height="40"></Button>
            <Button Content="April" Background="LightBlue" Margin="2.5" Width="90" Height="40"></Button>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Button Content="Button 1" Background="Yellow" Margin="10" Width="80"></Button>
            <Button Content="Button 2" Background="Orange" Margin="10" Width="80"></Button>
            <Button Content="Button 3" Background="Yellow" Margin="10" Width="80"></Button>
            <Button Content="Button 4" Background="Orange" Margin="10" Width="80"></Button>
        </StackPanel>
    </StackPanel>
    
</Window>

<Window x:Class="session4_projects.CanvasExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:session4_projects"
        mc:Ignorable="d"
        Title="CanvasExample" Height="161" Width="320">
    <Canvas>
        <Button Background="Yellow" Content="Top / Right" Canvas.Top="20" 
                Canvas.Right="20"></Button>
        <Button Background="Yellow" Content="Top / Left" Canvas.Top="20" 
                Canvas.Left="20"></Button>
        <Button Background="Yellow" Content="bottom / Left" Canvas.Bottom="20" 
                Canvas.Left="20"></Button>
        <Button Background="Yellow" Content="bottom / Right" Canvas.Bottom="20" 
                Canvas.Right="20"></Button>
    </Canvas>
</Window>

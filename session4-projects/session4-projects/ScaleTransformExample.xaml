<Window x:Class="session4_projects.ScaleTransformExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:session4_projects"
        mc:Ignorable="d"
        Title="ScaleTransformExample" Height="450" Width="800">
    <Grid>
        <StackPanel Width="75">
            <Button Background="Blue">No scaling</Button>
            <Button Background="BurlyWood">
                <Button.RenderTransform>
                    <ScaleTransform ScaleX="2"/>
                </Button.RenderTransform>
                Scale 2
            </Button>
            <Button Background="Orange">
                <Button.RenderTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="3"/>
                </Button.RenderTransform>
                <Button.Content>
                    Scale 3
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>
</Window>

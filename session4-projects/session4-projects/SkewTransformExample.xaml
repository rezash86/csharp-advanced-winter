<Window x:Class="session4_projects.SkewTransformExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:session4_projects"
        mc:Ignorable="d"
        Title="SkewTransformExample" Height="350" Width="520">
    <Grid Width="110" Height="45">
        <Button Content="Skew" Background="Orange" Margin="-48,-29,-33,29">
            <Button.RenderTransform>
                <SkewTransform AngleX="10"/>
            </Button.RenderTransform>
        </Button>
        <Button Content="Skew" Background="Orange" Margin="-48,17,-33,-17">
            <Button.RenderTransform>
                <SkewTransform AngleY="10"/>
            </Button.RenderTransform>
        </Button>
    </Grid>
</Window>

<Window x:Class="session8_quiz_answers.Task3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:session8_quiz_answers"
        mc:Ignorable="d"
        Title="Task3" Height="300" Width="400" Background="LightGray">
    <Grid>
        <TabControl>
            <TabItem Header="tab 1">
                <StackPanel Margin="20">
                    <CheckBox x:Name="chRevealTab" Content="Reveal Tab 2" 
                              Checked="chRevealTab_Checked" Unchecked="chRevealTab_Unchecked"/>

                </StackPanel>
            </TabItem>
            <TabItem Header="tab 2" x:Name="tab2">
                <StackPanel Margin="20">
                    <TextBlock Text="Hello from inside tab 2"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
